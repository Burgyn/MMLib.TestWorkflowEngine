{
  "compilerOptions": {
    "lib": ["es2022", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["credentials/**/*", "nodes/**/*"],
  "exclude": ["node_modules/**/*", "**/*.spec.ts"]
} 